# Environment Variables for Playwright Tests

# Base URL for the application under test
BASE_URL=https://www.saucedemo.com

# Timeout settings (in milliseconds)
TIMEOUT=15000
TEST_TIMEOUT=30000
EXPECT_TIMEOUT=10000

# Number of retries for failed tests in CI
RETRIES=3

# CI environment indicator
CI=false

# Playwright browser installation path (for CI optimization)
PLAYWRIGHT_BROWSERS_PATH=0

# Test environment (dev, staging, production)
TEST_ENV=production

# Browser-specific settings
HEADLESS=true
SLOW_MO=0

# Worker configuration
WORKERS=2

# Global setup/teardown
GLOBAL_SETUP=true
GLOBAL_TEARDOWN=true

# Sharding configuration
SHARD=false
SHARD_CURRENT=1
SHARD_TOTAL=1

# Reporting settings
REPORT_OPEN=false
